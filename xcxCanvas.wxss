.board {
  position: fixed;
  top: 9999rpx;
}


.whole {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 1;
  background: #fff;
  z-index: 100;
  left: 0;
  top: 0;
}

.release-button {
  position: fixed;

  left: 0;
  right: 0;
  bottom: 20rpx;
  z-index: 100;

  margin: auto;
  width: 670rpx;
  height: 85rpx;
  padding: 0;
  border-radius: 8rpx;
  border: 0;
  font-size: 36rpx;
  letter-spacing: 1rpx;
  font-family: sans-serif;
  font-weight: bold;
  line-height: 36rpx;
  
  background-color: #fda26b;
  color: #fff;
}


.btn-place {
  margin: 20rpx auto;
  height: 85rpx;
}

.canvasImage {
  width: 100vw;
}

.poster-prompt-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  /* opacity: 0.4; */
  width: 100vw;
  height: 100vh;
}
.fuzzy {
  width: 100%;
  height: 100%;
  position: absolute;
  background: #000;
  opacity: 0.4;
  top: 0;
  left: 0;
  z-index: -1;
}
.poster-prompt {
  border-radius: 10rpx;
  padding: 10rpx 20rpx 20rpx;
  background: #fff;
  opacity: 1;
  width: 500rpx;
  z-index: 1;
}
.poster-prompt-text {
  margin-bottom: 40rpx;
  color: #434241;
  font-size: 27rpx;
}
.poster-button-box {
}
.poster-top-close {
  position: absolute;
  right: 10rpx;
  padding: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.poster-confirm {
  padding-top: 0;
  padding-bottom: 0;
  color: #fff;
  height: 60rpx;
  width: 130rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background: #fda26b;
  margin-bottom: 20rpx;
}

.poster-prompt-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fda26b;
  height: 70rpx;
  margin-bottom: 20rpx;
}


.photo-box {
  margin-right: 30rpx;
  border-radius: 50%;
  padding: 8rpx;
  width: 130rpx;
  height: 130rpx;

  border: 1rpx solid #4c1200;
}

.photo {
  /* border-radius: 50%; */
  width: 100%;
  /* height: 100%; */

  display: block;
}
